@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
<SfAutoComplete TValue="string" TItem="Games" Placeholder="e.g. Australia" DataSource="@LocalData" Width="300px" ShowPopupButton="true" FilterType="Syncfusion.Blazor.DropDowns.FilterType.StartsWith">
    <AutoCompleteFieldSettings Value="Text" />
</SfAutoComplete>

<h1>Hello, world!</h1>

Welcome to your new app.
<SfDropDownList TValue="string" TItem="Games" Placeholder="Select a game" DataSource="@LocalData">
  <DropDownListFieldSettings Value="ID" Text="Text"></DropDownListFieldSettings>
</SfDropDownList>

<h2>Selam</h2>

<SfDatePicker TValue="DateTime?" Format="dd-MM-yyyy" @bind-Value="@Value"></SfDatePicker>

<h2>DateOnly Desteği Var</h2>

<SfDatePicker TValue="DateOnly" @bind-Value="@Value1"></SfDatePicker>

<br />
<SfDropDownButton Content="Düzenle">
    <DropDownMenuItems>
        <DropDownMenuItem Text="Kes"></DropDownMenuItem>
        <DropDownMenuItem Text="Kopyala"></DropDownMenuItem>
        <DropDownMenuItem Text="Yapıştır"></DropDownMenuItem>
    </DropDownMenuItems>
</SfDropDownButton>
<br />

<div id="target">
    <SfFab Target="#target" Content="Add"></SfFab>
</div>
<span>Cep Telefonıu girin</span>
<SfMaskedTextBox Mask='(000)-000-0000'></SfMaskedTextBox>

@code {
  public class Games
